<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="jess.trackmymiles.DisplayTotalMiles"
    android:background="#ff87ab84">

    <TextView
        android:id="@+id/heading"
        android:text="My Mileage Tracker"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Total miles for all trips: "
        android:id="@+id/textView4"
        android:layout_below="@+id/heading"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView5"
        android:layout_toRightOf="@+id/textView4"
        android:layout_below="@+id/heading"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Total miles for today: "
        android:id="@+id/textView6"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView7"
        android:layout_marginTop="20dp"
        android:layout_alignBottom="@+id/textView6"
        android:layout_toRightOf="@+id/textView6"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Total miles for yesterday: "
        android:id="@+id/yesterday"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/yesterdayDisplay"
        android:layout_alignBottom="@+id/yesterday"
        android:layout_toRightOf="@+id/yesterday"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Total miles for last week: "
        android:id="@+id/lastWeek"
        android:layout_below="@+id/yesterdayDisplay"
        android:layout_alignParentLeft="true" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/lastWeekDisplay"
        android:layout_alignBottom="@+id/lastWeek"
        android:layout_toRightOf="@+id/lastWeek"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Total miles for last month: "
        android:id="@+id/lastMonth"
        android:layout_below="@+id/lastWeekDisplay"
        android:layout_alignParentLeft="true" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/lastMonthDisplay"
        android:layout_alignBottom="@+id/lastMonth"
        android:layout_toRightOf="@+id/lastMonth"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Total miles for this year: "
        android:id="@+id/thisYear"
        android:layout_below="@+id/lastMonthDisplay"
        android:layout_alignParentLeft="true" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/thisYearDisplay"
        android:layout_alignBottom="@+id/thisYear"
        android:layout_toRightOf="@+id/thisYear"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="____________________________________"
        android:id="@+id/topDiv"
        android:layout_below="@+id/thisYear"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Choose dates to view all mileage."
        android:id="@+id/textView8"
        android:layout_below="@+id/topDiv"
        android:layout_alignParentLeft="true" />

    <EditText
        android:id="@+id/fromDate"
        android:width="125dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:hint="From"
        android:inputType="date"/>

    <EditText
        android:id="@+id/toDate"
        android:width="125dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/fromDate"
        android:layout_toRightOf="@+id/fromDate"
        android:ems="10"
        android:hint="To"
        android:inputType="date"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter"
        android:id="@+id/btnCalculate"
        android:singleLine="false"
        android:layout_alignBottom="@+id/toDate"
        android:layout_toRightOf="@+id/toDate"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0"
        android:id="@+id/tvResults"
        android:singleLine="false"
        android:layout_alignBottom="@+id/textView"
        android:layout_toRightOf="@+id/textView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Mileage for custom dates: "
        android:id="@+id/textView"
        android:singleLine="false"
        android:layout_below="@+id/fromDate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="____________________________________"
        android:id="@+id/secDiv"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Breakdown by type for custom dates:"
        android:id="@+id/breakDown"
        android:layout_below="@+id/secDiv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


     <!--need to put something here for list display of breakdown of types -->
    <ListView
        android:id="@+id/listView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/breakDown"
        android:layout_centerHorizontal="true">
    </ListView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="____________________________________"
        android:id="@+id/thirdDiv"
        android:layout_below="@+id/listView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
